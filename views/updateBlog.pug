html
    head
        title Stamps and Stories | Edit Blog
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        link(rel="stylesheet" href="/css/styles.css")
    body
        a(href = '/blogs')
            button.back-button Back to blogs  
        h1 Stamps and Stories
        h3 Edit blog:
        div(id='container')
            div(id='updateform-container')
                if flashMsg.length > 0
                    .alert.alert-danger #{flashMsg}
                form(action="/blogs/"+blog._id  method="POST")
                    div.form-group
                        label(for=author) Your Name: 
                        input#city.form-control(type="text" name="author" value=blog.author required)
                    div.form-group
                        label(for=title) Blog title: 
                        input#city.form-control(type="text" name="title" value=blog.title required)
                    div.form-group
                        label(for=city) City: 
                        input#city.form-control(type="text" name="city" value=blog.city required)
                    div.form-group
                        label(for=country) Country: 
                        input#country.form-control(type="text" name="country" value=blog.country required)
                    div.form-group
                        label(for="date") Date of Travel: 
                        input#date.form-control(type="date" name="date" value=formattedDate required)
                    div.form-group
                        label(for="blog") Blog about it!: 
                        textarea#blog.form-control(name="blog" rows="3" required)= blog.blog
                    button.form-button(type=submit) Update your Blog



    